<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YouthProtectionAplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:YouthProtectionAplication"
    xmlns:viewsDiario="clr-namespace:YouthProtectionAplication.Views.Diario"
    xmlns:viewsUsuario="clr-namespace:YouthProtectionAplication.Views.Usuarios"
    Shell.FlyoutBehavior="Disabled"
    Title="YouthProtectionAplication"
    >


    


    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" >
 
        <ShellContent 
     Title="Home" Icon="home.png"
     ContentTemplate="{DataTemplate viewsDiario:DiarioViewUser}"
     />


        <ShellContent
        Title="Perfil" Icon="gg_profile.png"
        ContentTemplate="{DataTemplate viewsUsuario:EditarPerfilView}"
      />

       
    </FlyoutItem>


   






</Shell>
