<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YouthProtectionAplication.Views.Diario.DiarioCreatePostUser"
             Title="DiarioCreatePostUser">
    <VerticalStackLayout
        Padding="0" 
        Spacing="30" 
        VerticalOptions="Center">

        <Entry x:Name="InputPostEntry"
               Placeholder="Digite aqui no que você está pensando..."
               TextChanged="OnTextChanged"
               MaxLength="260"
                
               HorizontalOptions="CenterAndExpand" 
               />

        <Label x:Name="CountPostLabel"
               Text="260 caracteres restantes"
               HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>