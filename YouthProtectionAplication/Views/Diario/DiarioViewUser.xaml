<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YouthProtectionAplication.Views.Diario.DiarioViewUser"
              BackgroundColor="White"
              Shell.PresentationMode="Animated"
             >
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="500" />
                <RowDefinition Height="300" />
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30" BackgroundColor="#FFF4E3">
                <Image HeightRequest="80" Source="logosemnome.png" HorizontalOptions="Start" Grid.Row="0"/>
                
            </StackLayout>

            <VerticalStackLayout Grid.Row="1" Padding="30, 15,30, 15" >
                <ListView x:Name="listView" HasUnevenRows="True" ItemsSource="{Binding Posts}" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <VerticalStackLayout Padding="10">
                                    <Label Text="{Binding UserName}" FontSize="20" FontAttributes="Bold"/>
                                    <Label Text="{Binding Title}" FontSize="15" FontAttributes="Italic"/>
                                    <Label Text="{Binding PostText}" FontSize="10"/>
                                </VerticalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </VerticalStackLayout>


            <Button Text="+"
                WidthRequest="25"
                HeightRequest="25"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="25"
                 HorizontalOptions="End"
                VerticalOptions="Center"
                    Grid.Row="3"
                 Command="{Binding NovaPostagem}"
                />




        </Grid>


    </ScrollView>

</ContentPage>